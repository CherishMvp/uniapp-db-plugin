{
  "compilerOptions": {
    "module": "ESNext",           // 使用 ES 模块
    "moduleResolution": "Node",   // 采用 Node 模块解析规则
    "target": "ESNext",           // 使用最新的 JS 语法
    "esModuleInterop": true,      // 启用对 CommonJS 的兼容性
    "outDir": "./dist",           // 输出目录
    "declarationDir": "./dist/types",
    "declaration": true,          // 生成类型声明文件
    "declarationMap": true,       // 生成声明文件映射
    "strict": true,             // 启用严格模式
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
		"noImplicitThis": true,
    "baseUrl": ".",
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
    "types": ["@dcloudio/types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  
  "exclude": ["node_modules", "dist"]
}
